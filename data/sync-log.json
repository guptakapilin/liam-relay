const fs = require('fs');
const path = require('path');

const SYNC_LOG_PATH = path.join(__dirname, 'sync-log.json');

let syncLog = {
  lastUpdated: new Date().toISOString(),
  agents: {
    Liam: {
      archives: [],
      unifiedFolderId: process.env.LiamUnified || '',
    },
    Eva: {
      archives: [],
      unifiedFolderId: process.env.EvaUnified || '',
    },
    Radhika: {
      archives: [],
      unifiedFolderId: process.env.RadhikaUnified || '',
    },
  },
};

// âœ… Load sync log from disk or fallback to ENV
const loadSyncLog = () => {
  try {
    const raw = fs.readFileSync(SYNC_LOG_PATH, 'utf8');
    syncLog = JSON.parse(raw);
    console.log('âœ… Loaded sync-log.json');
  } catch (err) {
    console.warn('âš ï¸ sync-log.json not found. Using fallback ENV values.');
  }
};

// âœ… Save sync log to disk
const saveSyncLog = () => {
  syncLog.lastUpdated = new Date().toISOString();
  fs.writeFileSync(SYNC_LOG_PATH, JSON.stringify(syncLog, null, 2), 'utf8');
  console.log('ðŸ’¾ sync-log.json updated');
};

// âœ… Get all agent info
const getSyncLog = () => syncLog;

// âœ… Utility: Get Unified Folder ID for agent
const getUnifiedFolderId = (agent) => {
  return syncLog.agents[agent]?.unifiedFolderId || '';
};

module.exports = {
  loadSyncLog,
  saveSyncLog,
  getSyncLog,
  getUnifiedFolderId,
};
